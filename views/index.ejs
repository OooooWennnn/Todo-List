<%-include("partials/header.ejs")%>

    <main>
        <div class="box">
            <h1 class="title"><%= day %>, <%= month %> <%= new Date().getDate() %></h1>
        </div>
        <div class="box">

            <% list.forEach((item, index) => { %>
                <form action="/moveToDone" method="post">
                    <div class="item">
                        <input class="checkbox" type="checkbox">
                        <p><%= item %></p>
                        <input type="hidden", name="doneItem" value="<%= item %>">
                        <input type="hidden" name="itemIndex" value="<%= index %>">
                    </div>
                </form>
            <% }) %>

            <form class="item add-item" action="/add" method="post">
                <input class="text" type="text" name="newItem" placeholder="New Item" autocomplete="off">
                <button class="add-item-button" type="submit">+</button>
            </form>
        </div>
    </main>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
    <script src="script.js"></script>
</body>
</html>